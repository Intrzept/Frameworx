<script>
    window.addEventListener('scroll', function () {
        const navbar = document.getElementById('row-CdimMctv');
        const logo = document.getElementById('element-55ESbqe7');
        const links = document.getElementById('element-MW82Ebiw');
      const button = document.getElementById('element-yRBDb6z3');
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
            logo.classList.add('scrolled');
            links.classList.add('scrolled');
            button.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
            logo.classList.remove('scrolled');
            links.classList.remove('scrolled');
            button.classList.remove('scrolled');
        }
    });
  
</script>
